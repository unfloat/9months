<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_prenom_layout"
    android:layout_marginTop="15dp">
    
    <ImageView
        android:id="@+id/logogenre"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/logomale"
        android:layout_alignParentStart="true"

        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/prenom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramzi"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/logogenre"
        android:layout_toEndOf="@+id/logogenre"/>

    <Button
        android:id="@+id/prenom_favoris_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/coeurgris"
        android:layout_alignParentEnd="true"
        />

